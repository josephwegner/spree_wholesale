<fieldset class="leftie">

  <fieldset class="user-details">
    <h2>User</h2>
    <%= form.fields_for :user do |uf| %>
      <%= render 'spree/shared/user_form', :f => uf %>
    <% end %>
  </fieldset>
</div>

  <fieldset class="wholesaler-details">
    <h2>Company Information</h2>

    <p>
      <%= form.label :company %><span class="req">*</span><br/>
      <%= form.text_field :company, :class => 'required input' %>
    </p>
    <p>
      <%= form.label :buyer_contact %><span class="req">*</span><br/>
      <%= form.text_field :buyer_contact, :class => 'required input' %>
    </p>
    <p>
      <%= form.label :manager_contact %><span class="req">*</span><br/>
      <%= form.text_field :manager_contact, :class => 'required input' %>
    </p>
    <p>
      <%= form.label :phone %><span class="req">*</span><br/>
      <%= form.text_field :phone, :class => 'required input' %>
    </p>
    <p>
      <%= form.label :fax %><br/>
      <%= form.text_field :fax %>
    </p>
    <p>
      <%= form.label :resale_number %><br/>
      <%= form.text_field :resale_number %>
    </p>
    <p>
      <%= form.label :taxid %><span class="req">*</span><br/>
      <%= form.text_field :taxid, :class => 'required input' %>
    </p>
    <p>
      <%= form.label :web_address %><br/>
      <%= form.text_field :web_address %>
    </p>
    <p>
      <%= form.label :terms %><br/>
      <%= form.select :terms, Spree::Wholesaler.term_options, :class => 'required input' %><span class="req">*</span>
    </p>
    <p>
      <%= form.label :notes %><br/>
      <%= form.text_area :notes %>
    </p>
  </fieldset>
  </div>

</fieldset>


<fieldset class="rightie">

  <%= render "spree/shared/address_form", :form => form %>
  </div>

</fieldset>

<% content_for :head do %>
  <%= javascript_include_tag 'wholesaler_address' %>
  <%= javascript_include_tag '/states' %>
<% end %>
